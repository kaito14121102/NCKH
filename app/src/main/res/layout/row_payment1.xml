<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="110dp"
    android:layout_margin="10dp"
    android:background="#fff"
    android:orientation="horizontal">

    <android.support.v7.widget.CardView
        android:id="@+id/card_view"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_margin="5dp"
        android:elevation="3dp"
        app:cardCornerRadius="4dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/img_sp"
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:layout_gravity="center"
                android:layout_margin="10dp"
                android:background="#fff"
                android:scaleType="fitCenter" />

            <LinearLayout
                android:weightSum="10"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="#fff"
                android:orientation="horizontal">

                <LinearLayout
                    android:layout_weight="8"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:orientation="vertical">

                    <TextView
                        android:paddingRight="3dp"
                        android:id="@+id/txt_tensp"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="10dp"
                        android:gravity="left"
                        android:text="Tên"
                        android:textSize="13dp"
                        android:textStyle="bold" />

                    <TextView
                        android:paddingRight="3dp"
                        android:paddingLeft="3dp"
                        android:id="@+id/txt_giasp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="left"
                        android:layout_marginTop="10dp"
                        android:background="@drawable/a_button_binhluan"
                        android:text="giá"
                        android:textColor="#fff"
                        android:textSize="13sp" />
                </LinearLayout>

                <android.support.v7.widget.CardView
                    android:layout_weight="2"
                    android:id="@+id/card_view1"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:elevation="3dp"
                    app:cardCornerRadius="4dp">

                <LinearLayout
                    android:background="#fff"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:orientation="vertical">

                    <Button
                        android:background="@drawable/subtract"
                        android:layout_marginLeft="13dp"
                        android:id="@+id/btn_tru"
                        android:layout_width="30dp"
                        android:layout_height="30dp" />

                    <Button
                        android:layout_marginLeft="5dp"
                        android:textSize="15sp"
                        android:textStyle="bold"
                        android:textColor="#ff000d"
                        android:background="@null"
                        android:id="@+id/btn_soluong"
                        android:layout_width="40dp"
                        android:layout_height="40dp"
                        android:text="1" />

                    <Button
                        android:layout_marginLeft="13dp"
                        android:background="@drawable/add"
                        android:id="@+id/btn_cong"
                        android:layout_width="28dp"
                        android:layout_height="28dp" />
                </LinearLayout>
                </android.support.v7.widget.CardView>

            </LinearLayout>
        </LinearLayout>

    </android.support.v7.widget.CardView>
</LinearLayout>